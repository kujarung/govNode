extends ./layout/def.pug

block title
    div.jumbotron
        h1 회원로그인
block content
    div.my-3.p-3.border.rounded.d-flex.justify-content-center.align-items-center
        form(action="/users/login" method="post")
            h2.text-center 회원로그인
            div.py-2(style="width:300px;")
                span 아이디
                input.form-control(type="text" name="userid")
            div.py-2(style="width:300px;")
                span 패스워드
                input.form-control(type="password" name="userpw")
            .py-2().text-center
                button.btn.btn-primary.mr-3 로그인
                button.btn.btn-success(type="button" onclick= "location.href='/users/join'") 회원가입